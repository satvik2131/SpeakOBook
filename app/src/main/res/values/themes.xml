<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpeakOBook" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navBottom</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="q">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/Theme.MaterialComponents.Light.NoActionBar</item>
    </style>


<!--    Used for pop up window of config-->
    <style name="CustomTheme" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside" tools:targetApi="honeycomb">true</item>
    </style>

</resources>